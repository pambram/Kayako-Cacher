{
  "manifest_version": 3,
  "name": "Kayako Pagination Cacher v3",
  "version": "5.5.0",
  "description": "Intercepts Kayako API requests to increase pagination limits and cache responses for better performance",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.kayako.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background-v3.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kayako.com/agent/*",
        "*://*.gfi.com/agent/*",
        "*://*.aurea.com/agent/*",
        "*://*.ignitetech.com/agent/*",
        "*://*.crossover.com/agent/*",
        "*://*.totogi.com/agent/*",
        "*://*.alpha.school/agent/*",
        "*://*.cloudsense.com/agent/*",
        "*://*.kandy.io/agent/*",
        "*://dnnsupport.dnnsoftware.com/agent/*",
        "*://csai.trilogy.com/agent/*"
      ],
      "js": ["content-consolidated.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "clean-working-solution.js",
        "fix-json-corruption.js",
        "image-upload-optimizer.js"
      ],
      "matches": [
        "*://*.kayako.com/*",
        "*://*.gfi.com/*",
        "*://*.aurea.com/*",
        "*://*.ignitetech.com/*",
        "*://*.crossover.com/*",
        "*://*.totogi.com/*",
        "*://*.alpha.school/*",
        "*://*.cloudsense.com/*",
        "*://*.kandy.io/*",
        "*://dnnsupport.dnnsoftware.com/*",
        "*://csai.trilogy.com/*"
      ]
    }
  ]
}
